@inherits LayoutComponentBase

<nav class="topbar shadow-sm">
    <div class="d-flex align-items-center gap-3">
        <button class="btn btn-link text-white d-lg-none" @onclick="ToggleSidebar">
            <i class="bi bi-list fs-3"></i>
        </button>

        <span class="logo-text">Makufundwe</span>
    </div>

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-bell text-white fs-5"></i>

        <div class="profile-circle">
            @UserInitials
        </div>
    </div>
</nav>

<div class="layout-wrapper">
    <!-- SIDEBAR -->
    <aside class="sidebar @(sidebarOpen ? "open" : "")">
        <nav class="sidebar-nav">

            <p class="side-label">Dashboard</p>
            <a class="side-link" href="/home">
                <i class="bi bi-house-door"></i> Home
            </a>

            <p class="side-label">Learn</p>
            <a class="side-link" href="/available-courses">
                <i class="bi bi-collection-play"></i> Available Courses
            </a>
            <a class="side-link" href="/my-courses">
                <i class="bi bi-journal-bookmark"></i> My Courses
            </a>
        </nav>
    </aside>

    <!-- CONTENT -->
    <main class="content-area">
    <Toast />
        @Body
    </main>

</div>

@code {
    private bool sidebarOpen = false;

    private void ToggleSidebar()
    {
        sidebarOpen = !sidebarOpen;
    }

    // Placeholder initials (replace later with real user)
    private string UserInitials => "MM";
}
