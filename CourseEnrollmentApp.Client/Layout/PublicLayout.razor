@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudAppBar Color="Color.Primary" Elevation="2">
    <MudText Typo="Typo.h6" Class="ml-2">Course Enrollment</MudText>
    <MudSpacer />
    <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/login">
        Login
    </MudButton>
</MudAppBar>

<div class="premium-layout-body">
    @Body
</div>

<style>
    .premium-layout-body {
        width: 100%;
        min-height: calc(100vh - 64px); /* 64px = AppBar height */
        margin: 0;
        padding: 0;
        position: relative;
        overflow: hidden;
    }
</style>
