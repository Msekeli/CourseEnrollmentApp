@page "/home"
@attribute [Authorize]
@layout MainLayout
@inject NavigationManager Navigation

@using CourseEnrollmentApp.Client.Components

<!-- Page Heading -->
<PageHeading Text="Welcome back!" />

<!-- Search -->
<SearchBar @bind-Value="_search"
           Placeholder="Search your learning..." />

<div class="container-fluid mt-4 home-container">

    <!-- IN PROGRESS SECTION -->
    <div class="section-block mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="section-title">In Progress</h5>
            <a class="section-link" href="#">See all</a>
        </div>

        <div class="row g-4">
            @foreach (var c in _inProgress.Where(MatchesSearch))
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <CourseCard Title="@c.Title"
                                Thumbnail="@c.Thumbnail"
                                Progress="@c.Progress"
                                TimeLeft="@c.TimeLeft"
                                ShowProgress="true"
                                OnClick="() => GoToCourse(c.Id)" />
                </div>
            }
        </div>
    </div>

    <!-- SAVED SECTION -->
    <div class="section-block">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="section-title">Saved</h5>
            <a class="section-link" href="#">See all</a>
        </div>

        <div class="row g-4">
            @foreach (var c in _saved.Where(MatchesSearch))
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <CourseCard Title="@c.Title"
                                Thumbnail="@c.Thumbnail"
                                Category="@c.Category"
                                OnClick="() => GoToCourse(c.Id)" />
                </div>
            }
        </div>
    </div>

</div>

@code {
    private string _search = "";

    private bool MatchesSearch(HomeCourse c) =>
        string.IsNullOrWhiteSpace(_search)
        || c.Title.Contains(_search, StringComparison.OrdinalIgnoreCase)
        || c.Category.Contains(_search, StringComparison.OrdinalIgnoreCase);

    void GoToCourse(int id)
    {
        Navigation.NavigateTo($"/course/{id}");
    }

    public class HomeCourse
    {
        public int Id { get; set; }
        public string Title { get; set; } = "";
        public string Thumbnail { get; set; } = "";
        public string TimeLeft { get; set; } = "";
        public string Category { get; set; } = "";
        public int Progress { get; set; }
    }

    private List<HomeCourse> _inProgress = new()
    {
