@page "/"
@layout PublicLayout
@inject NavigationManager Nav

<div class="premium-hero">

    <div class="hero-overlay"></div>

    <div class="hero-content fade-up">

        <h1 class="hero-title">Shape Your Future</h1>

        <p class="hero-subtitle">
            Discover courses designed to elevate your skills and unlock new opportunities.
        </p>

        <div class="hero-buttons">

            <button class="btn btn-purple hero-btn"
                    @onclick="GoToAvailableCourses">
                <i class="bi bi-book"></i> Browse Courses
            </button>

            <button class="btn btn-purple hero-btn"
                    @onclick="GoToRegister">
                <i class="bi bi-person-plus"></i> Create Account
            </button>

        </div>

    </div>

</div>

@code {
    void GoToAvailableCourses() => Nav.NavigateTo("/available-courses");
    void GoToRegister() => Nav.NavigateTo("/register");
}
